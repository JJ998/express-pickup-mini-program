<!--register.wxml-->
<view class="container">
  <view>
    <form bindsubmit="formSubmit">
      <view class='inputs'>
        <input name='username' placeholder='用户名'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input name='card_id' type='number' placeholder='学号'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input password name='password' placeholder='密码'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input password name='password_confirm' placeholder='确认密码'/>
        <view class='hr'/>
      </view>
      <view>
        <button form-type='submit'>登录</button>
      </view>
    </form>
  </view>
</view>